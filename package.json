{
  "name": "morpho-contracts",
  "version": "1.0.0",
  "description": "",
  "main": "hardhat.config.js",
  "files": [
    "contracts"
  ],
  "scripts": {
    "test:comp:mainnet": "NETWORK=mainnet npx hardhat test test/comp-mainnet-test.js",
    "test:cream:polygon": "NETWORK=polygon-mainnet npx hardhat test test/cream-polygon-test.js",
    "coverage": "npx hardhat coverage",
    "lint": "yarn run lint:sol && yarn run lint:js",
    "lint:js": "eslint .",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "fix": "yarn fix:sol && yarn fix:js",
    "fix:js": "eslint --fix '**/*.js'",
    "fix:sol": "prettier --write ./contracts/**/*.sol",
    "size": "yarn run hardhat size-contracts",
    "postinstall": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/morpho-protocol/morpho-contracts.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/morpho-protocol/morpho-contracts/issues"
  },
  "homepage": "https://github.com/morpho-protocol/morpho-contracts#readme",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.6",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "chai": "^4.3.4",
    "decimal.js": "^10.3.1",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.1",
    "hardhat": "^2.5.0",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-deploy": "^0.9.1",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^7.0.1",
    "module-alias": "^2.2.2",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "^0.7.16"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.2.0",
    "prb-math": "^2.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn fix:sol && yarn fix:js"
    }
  },
  "_moduleAliases": {
    "@config": "config",
    "@test": "test"
  }
}
